#################################
#            Settings           #
#################################
NAME      = libft.a
CC        = cc
CFLAGS    = -Wall -Wextra -Werror
AR        = ar
ARFLAGS   = rcs
RM        = rm -f

#################################
#         Source & Objects      #
#################################
SRC       = $(wildcard ft_*.c)
OBJ       = $(SRC:.c=.o)

#################################
#            Rules              #
#################################
.PHONY: all clean fclean re

all: $(NAME)

# ライブラリ作成：既存のオブジェクトが変わらなければ再生成しない
$(NAME): $(OBJ)
	$(AR) $(ARFLAGS) $@ $^

# オブジェクト生成：ヘッダが変更されたら再コンパイル
%.o: %.c libft.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all
